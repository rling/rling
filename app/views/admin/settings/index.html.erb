<h1>Configurable Settings</h1>
<table>
  <tr>
    
    <th>Setting Name</th>
    <th>Descriptive Text</th>
    <th>Setting Type</th>
    <th>Setting Value</th>
  </tr>

<% @settings.each do |setting| %>
  <tr>
    <td><%= setting.name %></td>
    <td><%= setting.desc_text %></td>
    <td><%= setting.setting_type %></td>
    <td><%= setting.setting_value %></td>
    <td><%= link_to "Edit", edit_setting_path(setting)%></td>
  </tr>

<% end %>
</table>
<br />

