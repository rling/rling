<div id= "user_<%= @user.id %>" class="user_information">
<%= link_to 'Edit Information', edit_user_path(@user)  %>
<% if !@user_detail_settings.empty? %>
| <%= link_to 'Edit User Details', user_details_user_path(@user) %>
<% end %>

<h3>Details of  <%= @user.login %></h3>

<div class="user_section user_section_login">
  <div class="user_section_heading user_section_login_heading">Login:</div>
  <div class="user_section_value user_section_login_value"><%=@user.login %></div>
</div>

<div class="email">
    <div class="user_section_heading user_section_email_heading">Email:</div>
    <div class="user_section_value user_section_email_value"><%=@user.email %></div>
</div>


<%= render "shared/user_profile" %>

<div class="role">
   <div class="user_section_heading user_section_email_heading">Role:</div>
   <div class="user_section_value user_section_email_value">
      <%= @user.role_role_type%>
  </div>
</div>

<div class= "login_count">
  <div class="user_section_heading user_section_login_count_heading">Login Count:</div>
  <div class="user_section_value user_section_login_count_value"><%= @user.login_count %></div>
</div>

<div class="failed_login_count">
  <div class="user_section_heading user_section_failed_login_count_heading">Failed Login Count:</div>
  <div class="user_section_value user_section_failed_login_count_value"><%= @user.failed_login_count %></div>
</div>

<div class="current_login_IP">
  <div class="user_section_heading user_section_current_login_IP_heading">Current Login IP:</div>
 <div class="user_section_value user_section_failed_login_IP_value"><%= @user.current_login_ip %></div>
</div>

<div class="previous_login">
 <div class="user_section_heading user_section_previous_login_heading">Previous Login IP:</div>
 <div class="user_section_value user_section_previous_login_value"><%= @user.last_login_ip %></div>
</div>


<br/>
<% if current_user.admin? %>
<%= link_to 'Back',:action=>"index" %>
<% end %>
</div>

<div id="dashboard_right">
<div id="items">
 <%= render "shared/models_administration" %>
</div>
</div>
